#ifndef _OSCI_H
#define _OSCI_H

/**
 ******************************************************************************
 * Include Files
 ******************************************************************************
 **/
#include "xparameters.h"

/**
 ******************************************************************************
 * Global definitions
 ******************************************************************************
 **/
#define OSCI_DEVICE_ID XPAR_AXI_OSCI_0_DEVICE_ID
#define OSCI_INTERRUPT_ID XPAR_FABRIC_OSCI_0_CH1_IRQ_INTR

/**
 ******************************************************************************
 * This is the interrupt handler routine for the OSCI .
 ******************************************************************************
 **/
void OSCI_Handler(void *CallbackRef);

/**
 ******************************************************************************
 * Initalizes the OSCI
 ******************************************************************************
 **/
int OSCI_Init();

/**
 ******************************************************************************
 * Enables the OSCI interrupts
 ******************************************************************************
 **/
void OSCI_EnableInterrupt();

#endif // _OSCI_H
