<Application x:Class="Oscilloscope.App.Ui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Oscilloscope.App.Ui.Core.WPF.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <converters:InvertedBooleanConverter x:Key="InvertedBooleanConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Presentation/TriggerCfg/TriggerCfgResources.xaml" />
                <ResourceDictionary Source="Presentation/RecordViewer/RecordViewerResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>